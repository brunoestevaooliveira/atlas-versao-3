
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Issues can be read by any authenticated user.
    // Only authenticated users can create, update, or delete issues.
    match /issues/{issueId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // Users can create and read their own user document.
    // They cannot update or delete their document, or access others' documents.
    match /users/{userId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false; 
    }
  }
}
