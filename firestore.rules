
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer pessoa leia e crie ocorrências, 
    // mas apenas usuários autenticados podem atualizá-las.
    // A exclusão não é permitida por esta regra.
    match /issues/{issueId} {
      allow read, create;
      allow update: if request.auth != null;
    }
  }
}
