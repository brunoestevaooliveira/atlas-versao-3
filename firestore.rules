rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /issues/{issueId} {
      // Qualquer pessoa pode ler e criar ocorrências.
      allow read, create: if true;
      
      // Qualquer pessoa pode atualizar uma ocorrência (necessário para o botão de "apoiar").
      // A lógica de negócio para status e exclusão está no painel de admin.
      allow update, delete: if true;
    }
  }
}
